name:                slope-field
version:             0.1.0.0
synopsis:            Visualize mathematical function's slope fields
description:         Visualize mathematical function's slope fields
homepage:            https://github.com/mdibaiee/slope-field
license:             GPL-3
license-file:        LICENSE
author:              Mahdi Dibaiee
maintainer:          mdibaiee@aol.com
copyright:           2016 Mahdi Dibaiee
category:            Web
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Lib
  build-depends:       base >= 4.7 && < 5
                     , mathexpr >= 0.3.0.0
                     , data-default-class
  default-language:    Haskell2010

executable slope-field
  hs-source-dirs:      app
  main-is:             Main.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , slope-field
                     , Chart
                     , Chart-cairo
                     , lens
                     , data-default-class
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/mdibaiee/slope-field
